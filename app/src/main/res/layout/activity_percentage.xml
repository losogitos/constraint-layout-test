<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_percentage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stxnext.constraintlayoutsample.PercentageActivity">


    <Button
        android:text="LeftPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/activity_percentage"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_percentage"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="511dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="0dp"
        app:relativePercent="18" />

    <Button
        android:text="SizePercent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/size_button"
        tools:layout_editor_absoluteX="93dp"
        app:layout_constraintTop_toTopOf="@+id/activity_percentage"
        android:layout_marginTop="240dp" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:id="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/activity_percentage"
        app:layout_constraintRight_toRightOf="@+id/activity_percentage"
        app:layout_constraintBottom_toBottomOf="@+id/activity_percentage"
        android:layout_marginBottom="72dp" />

    <Button
        android:text="SizePercent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button5"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="511dp"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="0dp"
        app:relativePercent="84" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="321dp"
        app:relativePercent="63" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="403dp"
        app:relativePercent="79" />

</android.support.constraint.ConstraintLayout>